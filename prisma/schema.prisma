generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// === AUTH LAYER (NextAuth v5) ===
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  passwordHash  String?   @db.Text
  emailVerified DateTime?
  image         String?
  phone         String?
  role          Role      @default(MEMBER)
  isVerified    Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  alumni                  Alumni?
  accounts                Account[]
  sessions                Session[]
  approvedJobs            Job[]
  approvedAccomplishments Accomplishment[]
}

// === ALUMNI DIRECTORY (Search-Optimized) ===
model Alumni {
  id             String       @id @default(cuid())
  userId         String       @unique
  matricNo       String       @unique
  department     String
  graduationYear Int
  currentCity    String?
  employer       String?
  jobTitle       String?
  skills         String?
  linkedinUrl    String?
  status         MemberStatus @default(ACTIVE)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  user                   User                    @relation(fields: [userId], references: [id], onDelete: Cascade)
  accomplishments        Accomplishment[]
  accomplishmentLikes    AccomplishmentLike[]
  accomplishmentComments AccomplishmentComment[]
  postedJobs             Job[]
  applications           JobApplication[]

  @@index([department])
  @@index([graduationYear])
  @@index([currentCity])
  @@index([employer])
  @@index([matricNo])
  @@index([skills])
  @@index([jobTitle])
  @@index([department, graduationYear]) // ✅ NEW: Composite Dept+Year search
}

// === SOCIAL FEED ===
model Accomplishment {
  id           String             @id @default(cuid())
  alumniId     String
  type         AccomplishmentType
  title        String
  description  String?
  imageUrl     String?
  date         DateTime?
  isApproved   Boolean            @default(false)
  approvedById String? // ✅ FIXED: Proper FK relation
  createdAt    DateTime           @default(now())
  updatedAt    DateTime           @updatedAt

  alumni     Alumni                  @relation(fields: [alumniId], references: [id], onDelete: Cascade)
  approvedBy User?                   @relation(fields: [approvedById], references: [id]) // ✅ PROPER RELATION
  likes      AccomplishmentLike[]
  comments   AccomplishmentComment[]

  @@map("accomplishments")
}

model AccomplishmentLike {
  id               String   @id @default(cuid())
  accomplishmentId String
  alumniId         String
  createdAt        DateTime @default(now())

  accomplishment Accomplishment @relation(fields: [accomplishmentId], references: [id], onDelete: Cascade)
  alumni         Alumni         @relation(fields: [alumniId], references: [id], onDelete: Cascade)

  @@unique([accomplishmentId, alumniId])
}

model AccomplishmentComment {
  id               String   @id @default(cuid())
  accomplishmentId String
  alumniId         String
  content          String
  createdAt        DateTime @default(now())

  accomplishment Accomplishment @relation(fields: [accomplishmentId], references: [id], onDelete: Cascade)
  alumni         Alumni         @relation(fields: [alumniId], references: [id], onDelete: Cascade)
}

// === JOB MARKETPLACE ===
model Job {
  id           String    @id @default(cuid())
  posterId     String
  company      String?
  title        String
  description  String
  requirements String?
  location     String?
  salaryRange  String?
  isActive     Boolean   @default(true)
  deadline     DateTime?
  isApproved   Boolean   @default(false)
  approvedById String? // ✅ FIXED: Proper FK relation
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  poster       Alumni           @relation(fields: [posterId], references: [id])
  approvedBy   User?            @relation(fields: [approvedById], references: [id]) // ✅ PROPER RELATION
  applications JobApplication[]

  @@map("jobs")
}

model JobApplication {
  id          String            @id @default(cuid())
  jobId       String
  applicantId String
  status      ApplicationStatus @default(PENDING)
  coverLetter String?
  resumeUrl   String?
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  job       Job    @relation(fields: [jobId], references: [id], onDelete: Cascade)
  applicant Alumni @relation(fields: [applicantId], references: [id])

  @@unique([jobId, applicantId])
  @@map("job_applications")
}

// === ENTERPRISE ENUMS ===
enum Role {
  ADMIN
  MODERATOR
  MEMBER
}

enum MemberStatus {
  ACTIVE
  SUSPENDED
  INACTIVE
}

enum AccomplishmentType {
  WEDDING
  PROMOTION
  NEW_EMPLOYMENT
  BIRTH
  OTHER
}

enum ApplicationStatus {
  PENDING
  REVIEWED
  ACCEPTED
  REJECTED
}
